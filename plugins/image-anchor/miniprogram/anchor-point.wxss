/**
 * 锚点组件样式
 */

/* 锚点基础样式 */
.anchor-point {
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-sizing: border-box;
  transition: transform 0.2s ease;
}

.anchor-point:active {
  transform: translate(-50%, -50%) scale(0.95);
}

/* 脉冲动画 */
.anchor-point.pulse::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  background: inherit;
  opacity: 0.6;
  animation: pulse 2s ease-out infinite;
  pointer-events: none;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.6;
  }
  70% {
    transform: scale(1.6);
    opacity: 0;
  }
  100% {
    transform: scale(1.6);
    opacity: 0;
  }
}

/* 图片类型 */
.anchor-point.image {
  background: transparent;
  border-radius: 0;
  overflow: hidden;
}

.anchor-image {
  width: 100%;
  height: 100%;
}

/* 图形类型 */
.anchor-shape {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.shape-circle {
  border-radius: 50%;
}

.shape-square {
  border-radius: 4rpx;
}

.shape-rounded {
  border-radius: 16rpx;
}

/* 图标类型 */
.anchor-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-svg {
  width: 100%;
  height: 100%;
}

/* 默认样式 */
.anchor-default {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.anchor-order {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 说明文本 */
.anchor-label {
  position: absolute;
  white-space: nowrap;
  font-size: 24rpx;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.75);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  pointer-events: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.label-right {
  left: calc(100% + 12rpx);
  top: 50%;
  transform: translateY(-50%);
}

.label-left {
  right: calc(100% + 12rpx);
  top: 50%;
  transform: translateY(-50%);
}

.label-top {
  bottom: calc(100% + 12rpx);
  left: 50%;
  transform: translateX(-50%);
}

.label-bottom {
  top: calc(100% + 12rpx);
  left: 50%;
  transform: translateX(-50%);
}

/* PC 端适配 */
@media (min-width: 768px) {
  .anchor-label {
    max-width: 300rpx;
    font-size: 26rpx;
    padding: 8rpx 20rpx;
  }

  .anchor-order {
    font-size: 28rpx;
  }
}
