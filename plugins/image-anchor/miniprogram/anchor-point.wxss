/**
 * 锚点组件样式
 */

/* 锚点基础样式 */
.anchor-point {
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-sizing: border-box;
  transition: transform 0.2s ease;
  border-radius: 50%;
}

.anchor-point:active {
  transform: translate(-50%, -50%) scale(0.95);
}

/* 脉冲动画 - 使用 CSS 变量 */
.anchor-point.pulse::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  background: var(--pulse-color, #ff4d4f);
  opacity: 0.6;
  animation: pulse 2s ease-out infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.6;
  }
  70% {
    transform: scale(1.8);
    opacity: 0;
  }
  100% {
    transform: scale(1.8);
    opacity: 0;
  }
}

/* 图片类型 */
.anchor-point.image {
  background: transparent;
  border-radius: 0;
  overflow: hidden;
}

.anchor-image {
  width: 100%;
  height: 100%;
}

/* 图形类型 - 在外层设置 border-radius */
.anchor-point.shape-circle {
  border-radius: 50%;
}

.anchor-point.shape-square {
  border-radius: 4px;
}

.anchor-point.shape-rounded {
  border-radius: 8px;
}

/* 图形内容 */
.anchor-shape {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: inherit;
}

/* 图标类型 */
.anchor-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-svg {
  width: 100%;
  height: 100%;
}

/* 默认样式 */
.anchor-default {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

.anchor-order {
  color: #ffffff;
  font-size: 12px;
  font-weight: bold;
}

/* 说明文本 - 使用 px 单位避免 PC 端放大 */
.anchor-label {
  position: absolute;
  white-space: nowrap;
  font-size: 12px;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.75);
  padding: 3px 8px;
  border-radius: 4px;
  max-width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  pointer-events: none;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
}

.label-right {
  left: calc(100% + 6px);
  top: 50%;
  transform: translateY(-50%);
}

.label-left {
  right: calc(100% + 6px);
  top: 50%;
  transform: translateY(-50%);
}

.label-top {
  bottom: calc(100% + 6px);
  left: 50%;
  transform: translateX(-50%);
}

.label-bottom {
  top: calc(100% + 6px);
  left: 50%;
  transform: translateX(-50%);
}

/* PC 端适配 */
@media (min-width: 768px) {
  .anchor-label {
    max-width: 150px;
    font-size: 13px;
    padding: 4px 10px;
  }

  .anchor-order {
    font-size: 14px;
  }
}
