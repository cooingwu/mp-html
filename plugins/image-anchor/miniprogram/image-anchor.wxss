/**
 * 图片锚点容器组件样式
 */

/* 容器 */
.image-anchor-container {
  position: relative;
  display: inline-block;
  width: 100%;
}

/* 图片 */
.anchor-image {
  display: block;
  width: 100%;
}

/* 锚点层 */
.anchors-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.anchors-layer anchor-point {
  pointer-events: auto;
}

/* Modal 遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  position: relative;
  z-index: 1;
  width: 100%;
  max-height: 70vh;
}

/* PC 端适配 */
@media (min-width: 768px) {
  .modal-content {
    width: 60%;
    max-width: 800rpx;
    margin: 0 auto;
  }
}
