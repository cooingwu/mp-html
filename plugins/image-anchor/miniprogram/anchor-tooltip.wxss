/**
 * 解读弹窗组件样式
 * 与管理端和 anchor-image 组件保持一致
 * 使用 px 单位，避免 PC 端被放大
 */

/* 弹窗容器 - 基础样式 */
.tooltip-container {
  position: relative;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 6px;
  border: 1px solid rgba(0, 0, 0, 0.3);
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 100%;
  box-sizing: border-box;
}

/* 容器模式 - 底部位置 */
.tooltip-container.position-bottom {
  border-radius: 6px 6px 0 0;
  animation: slideUpContainer 0.3s ease-out;
}

/* 容器模式 - 顶部位置 */
.tooltip-container.position-top {
  border-radius: 0 0 6px 6px;
  animation: slideDownContainer 0.3s ease-out;
}

/* Modal 模式 */
.tooltip-container.modal {
  width: 100%;
  max-height: 70vh;
  border-radius: 16px 16px 0 0;
  border-radius: 16px 16px 0 0;
  animation: slideUpModal 0.3s ease-out;
}

@keyframes slideUpContainer {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideDownContainer {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideUpModal {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 关闭按钮 - 红色方形样式，与管理端一致 */
.close-btn {
  position: absolute;
  top: 2px;
  right: 4px;
  width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  background: #f53f3f;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  font-size: 14px;
  color: #fff;
}

.close-btn:active {
  opacity: 0.8;
}

/* 内容区域 */
.tooltip-content {
  flex: 1;
  padding: 10px;
  padding-right: 12px;
  overflow-y: auto;
  box-sizing: border-box;
  min-height: 0;
}

.page-content {
  display: flex;
  flex-direction: column;
}

/* 富文本类型 */
.page-title {
  font-size: 14px;
  font-weight: 600;
  color: #1d2129;
  margin-bottom: 6px;
  line-height: 1.4;
  word-break: break-word;
}

/* 图文内容容器 */
.richtext-body {
  flex: 1;
  display: flex;
  gap: 4px;
  overflow: hidden;
  min-height: 20%;
}

/* 文本滚动容器 */
.page-text-scroll {
  flex: 1;
  min-width: 0;
  height: 100%;
}

.page-text {
  font-size: 12px;
  color: #4e5969;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

.page-image {
  flex-shrink: 0;
  width: auto;
  aspect-ratio: 3 / 4;
  border-radius: 4px;
}

/* 视频类型 */
.page-video {
  width: 100%;
  border-radius: 6px;
  background: #000;
}

/* 音频类型 */
.audio-container {
  display: flex;
  align-items: center;
  padding: 10px;
  padding: 10px;
  background: #f5f5f5;
  border-radius: 8px;
  border-radius: 8px;
}

.audio-cover {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  flex-shrink: 0;
}

.audio-cover-placeholder {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.audio-icon {
  font-size: 24px;
  font-size: 24px;
  color: #fff;
}

.audio-info {
  flex: 1;
  margin-left: 12px;
  margin-left: 12px;
}

.audio-title {
  font-size: 12px;
  color: #333;
  font-weight: 500;
  margin-bottom: 8px;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-controls {
  display: flex;
  align-items: center;
}

.play-btn {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon {
  font-size: 12px;
  color: #fff;
}

.audio-progress {
  flex: 1;
  margin-left: 10px;
  margin-left: 10px;
}

.progress-bar {
  height: 4px;
  height: 4px;
  background: #ddd;
  border-radius: 2px;
  border-radius: 2px;
  overflow: hidden;
  margin-bottom: 4px;
  margin-bottom: 4px;
}

.progress-fill {
  height: 100%;
  background: #ff4d4f;
  border-radius: 2px;
  border-radius: 2px;
  transition: width 0.1s linear;
}

.time-display {
  font-size: 10px;
  color: #999;
}

.time-display text {
  margin: 0 2px;
  margin: 0 2px;
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100px;
  height: 100px;
  color: #999;
  font-size: 12px;
}

/* 分页控制 */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px 16px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  background: #fff;
}

.page-btn {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-btn:active:not(.disabled) {
  background: #e0e0e0;
}

.page-btn.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.btn-icon {
  font-size: 16px;
  color: #333;
  line-height: 1;
}

.page-dots {
  display: flex;
  align-items: center;
  margin: 0 16px;
  margin: 0 16px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #ddd;
  margin: 0 3px;
  transition: all 0.2s ease;
}

.dot.active {
  background: #ff4d4f;
  width: 12px;
  border-radius: 3px;
}

/* PC 端适配 - 限制最大宽度 */
@media (min-width: 768px) {
  .tooltip-container.modal {
    width: 60%;
    max-width: 400px;
    margin: 0 auto;
  }
}
