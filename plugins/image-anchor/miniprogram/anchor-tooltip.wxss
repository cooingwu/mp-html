/**
 * 解读弹窗组件样式
 * 注意：swiper 和 scroll-view 必须通过 JS 设置明确的像素高度
 */

/* ==================== 容器 ==================== */
.tooltip-container {
  position: relative;
  background: rgba(237, 237, 237, 0.95);
  border-radius: 6px;
  border: 2px solid rgba(0, 0, 0, 0.3);
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  box-sizing: border-box;
}

/* Modal 模式 */
.tooltip-container.modal {
  width: 100%;
  border-radius: 16px 16px 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Container 模式 - 高度由父组件 .tooltip-wrapper 控制 */
.tooltip-container.container {
  height: 100%;
}

/* ==================== 关闭按钮 ==================== */
.close-btn {
  position: absolute;
  top: 2px;
  right: 4px;
  width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  background: #f53f3f;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  font-size: 14px;
  color: #fff;
}

.close-btn:active {
  opacity: 0.8;
}

/* ==================== Swiper（仅移动端） ==================== */
.tooltip-swiper {
  width: 100%;
}

.swiper-page {
  height: 100%;
  overflow: hidden;
}

/* ==================== 页面滚动容器 ==================== */
.page-scroll {
  padding: 16px;
  padding-bottom: 0;
  box-sizing: border-box;
}

/* ==================== 富文本内容 ==================== */
.page-title {
  font-size: 1rem;
  font-weight: 600;
  color: #1d2129;
  margin-bottom: 6px;
  line-height: 1.4;
  word-break: break-word;
}

/* 图文内容容器 - 统一为上图下文布局 */
.richtext-body {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.page-text {
  font-size: 0.9rem;
  color: #151c34;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* 图片样式 */
.page-image {
  width: 100%;
  max-height: 200px;
  object-fit: contain;
  border-radius: 4px;
}

/* ==================== 视频 ==================== */
.page-video {
  height: 100%;
  width: 100%;
  aspect-ratio: 4 / 3;
  border-radius: 6px;
  background: #000;
  z-index: 1000;
}

.modal .page-video {
  aspect-ratio: 4/3;
  height: 48vw;
  max-height: 60vh;
}

/* ==================== 音频 ==================== */
.audio-container {
  display: flex;
  align-items: center;
  padding: 10px;
  background: #f5f5f5;
  border-radius: 8px;
}

.audio-cover {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  flex-shrink: 0;
}

.audio-cover-placeholder {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.audio-icon {
  font-size: 24px;
  color: #fff;
}

.audio-info {
  flex: 1;
  margin-left: 12px;
}

.audio-title {
  font-size: 12px;
  color: #333;
  font-weight: 500;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-controls {
  display: flex;
  align-items: center;
}

.play-btn {
  position: relative;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: transparent;
  border: 4px solid #12233c;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: inline-block;
  width: 10px;
  height: 10px;
  aspect-ratio: 1/1;
  background: 0 0;
  border-top: 5px solid transparent;
  border-bottom: 5px solid transparent;
  border-left: 10px solid #12233c;
  border-right: none;
  transition: all 0.5s cubic-bezier(1, 0, 0, 1);
  color: white;
}

.play-icon.checked {
  background: #12233c;
  border: none;
  border-radius: 1px;
  width: 10px;
  height: 10px;
  transition: all 0.5s cubic-bezier(1, 0, 0, 1);
}

.play-icon.is-pc {
  box-sizing: border-box;
  width: 16px;
  height: 16px;
  background: #12233c;
  border-radius: 3px;
  clip-path: polygon(25% 0, 75% 50%, 25% 100%, 25% 51%);
}

.play-icon.checked.is-pc {
  width: 13px;
  height: 13px;
  clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  border-radius: 3px;
}

.audio-progress {
  flex: 1;
  margin-left: 10px;
}

.progress-bar {
  height: 4px;
  background: #ddd;
  border-radius: 2px;
  overflow: hidden;
  margin-bottom: 4px;
}

.progress-fill {
  height: 100%;
  background: #12233c;
  border-radius: 2px;
  transition: width 0.1s linear;
}

.time-display {
  font-size: 10px;
  color: #999;
}

.time-display text {
  margin: 0 2px;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100px;
  color: #999;
  font-size: 12px;
}

/* ==================== 分页控制（仅 PC 端） ==================== */
.pagination {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.page-btn {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-btn:active:not(.disabled) {
  background: transparent;
}

.page-btn.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.btn-icon {
  font-size: 16px;
  color: #333;
  line-height: 1;
}

.page-dots {
  display: flex;
  align-items: center;
  margin: 0 16px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #ddd;
  margin: 0 3px;
  transition: all 0.2s ease;
}

.dot.active {
  background: #12233c;
  width: 12px;
  border-radius: 3px;
}
