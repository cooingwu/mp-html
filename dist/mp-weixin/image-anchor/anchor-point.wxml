<view class="anchor-point {{styleType}}" style="left: {{anchor.position.x}}%; top: {{anchor.position.y}}%; width: {{size}}px; height: {{size}}px;" bindtap="onTap"><image wx:if="{{styleType === 'image'}}" class="anchor-image {{animation ? 'pulse' : ''}}" src="{{styleImage}}" mode="aspectFit"/><view wx:elif="{{styleType === 'shape'}}" class="anchor-shape {{shapeClass}} {{animation ? 'pulse' : ''}}" style="{{shapeStyle}}"></view><view wx:elif="{{styleType === 'icon'}}" class="anchor-icon {{animation ? 'pulse' : ''}}"><image class="icon-svg" src="{{iconSvg}}" mode="aspectFit"/></view><view wx:else class="anchor-default {{animation ? 'pulse' : ''}}" style="background-color: {{anchor.style.color || '#ff4d4f'}};"><text class="anchor-order">{{anchor.order || ''}}</text></view><view wx:if="{{anchor.label && anchor.label.text}}" class="anchor-label label-{{labelPosition}}">{{anchor.label.text}}</view></view>